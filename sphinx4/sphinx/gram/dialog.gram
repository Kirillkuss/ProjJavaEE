#JSGF V1.0;

grammar dialog;

<digit> = илья | ильф | евгений | петров | золотой | телёнок;

<number> = <digit>+ [point <digit>+];

<menu_command> =  digits                     |
                  [go to [the]] bank account |
                  илья           |
                  exit [[the] program]       ;

<bank_command> = [show | check] balance |
                 deposit <number>       |
                 withdraw <number>      |
                 илья                   ;

public <command> = <menu_command> | <bank_command>;
